<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_future_events_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uk.co.xakra.erasmusvipvalencia.Activities.FutureEventsDetailActivity"
    tools:showIn="@layout/activity_future_events_detail"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/my_events_linear"
    >
    <!-- NAME TOOLBAR-->

    <!-- DRESSCODE -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_dialog_info"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="- Información: todos teneis que llevar gorra porque hace sol.\n -Llevar agua porque caminaremos bastante\n -Llevar todos esta proof of payment porque se os pedirá antes de subir al autobús."
            android:id="@+id/textViewInfo"
            android:textColor="#fff"
            />

    </LinearLayout>




    <!-- WHEN AND TIME -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/calendar_icon"
            android:forceHasOverlappingRendering="false"
            android:tint="#fff"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="25 de diciembre"
                android:id="@+id/textViewDay"
                android:textColor="#fff"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="22:50 - 07:00"
                android:id="@+id/textViewTime"
                android:textColor="#fff"
                />

        </LinearLayout>

    </LinearLayout>
    <!--  WHERE-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_dialog_map"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text="Excursión Chulilla"
            android:id="@+id/textViewPlace"
            android:textColor="#fff"
            />
    </LinearLayout>



    <!-- NUMBER OF TICKETS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/rounded_corners"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:backgroundTint="@color/green"

            >

            <!--Tickets-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="#0fff"
                    app:srcCompat="@drawable/common_full_open_on_phone"
                    android:tint="#fff"
                    />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10€/ticket"
                        android:layout_gravity="right|center"
                        android:id="@+id/textViewPrice"
                        android:textColor="#fff"
                        />
                </FrameLayout>

            </LinearLayout>

            <!--Tickets-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/hearticon"
                    android:layout_marginLeft="5dp"
                    />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discount 2 €"
                        android:textColor="#fff"
                        android:layout_gravity="right|center"
                        android:id="@+id/textViewDiscount"
                        />
                </FrameLayout>

            </LinearLayout>

            <!--Tickets-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/wallet"

                    android:layout_marginLeft="5dp"
                    />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="total = 40€"
                        android:textColor="#fff"
                        android:layout_gravity="right|center"
                        android:id="@+id/textViewTotal"

                        />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/numberPicker"
                android:alpha="1"
                android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                android:scrollbars="vertical"
                android:layout_gravity="right|center"
                android:descendantFocusability="blocksDescendants"

                >
            </NumberPicker>
        </FrameLayout>
    </LinearLayout>

    <Button
        android:text="Confirmar Compra"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/buttonConfirmPayment"
        android:textColor="#fff"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/green"
        android:layout_marginTop="10dp"
        />

</LinearLayout>
</RelativeLayout>
